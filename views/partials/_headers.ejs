<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-primary">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      
        <% if (user) { %>
          <form class="form-inline" method="POST" action="/logout">
            <a class="form-inline text-white">Logged in as: <%= user.email  %></a>
            &nbsp
            &nbsp
            <button type="submit" class="btn btn-outline-light">Logout</button>
          </form>
        <% } else { %>
          <form class="form-inline" method="GET" action="/login">
            <button type="submit" class="btn btn-outline-light">Login</button>
            &nbsp
          </form>
          <form class="form-inline" method="GET" action="/register">
            <button type="submit" class="btn btn-outline-light">Register</button>
          </form>
        <% } %>

      </div>
  </nav>
</header>

 <% if (msg) { %>
  <div class= "alert alert-primary""><%= msg %></div>
  <% } %>


  